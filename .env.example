# VHM24R - Переменные окружения для Railway deployment
# Скопируйте этот файл в .env и заполните значения

# ============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================================================

# Flask секретный ключ (генерируйте случайную строку для продакшена)
SECRET_KEY=your-secret-key-change-in-production

# Режим работы (development/production)
FLASK_ENV=production

# Порт приложения (Railway автоматически устанавливает)
PORT=5000

# ============================================================================
# БАЗА ДАННЫХ
# ============================================================================

# PostgreSQL URL (Railway автоматически предоставляет)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Для локальной разработки можно использовать SQLite
# DATABASE_URL=sqlite:///local.db

# ============================================================================
# DIGITALOCEAN SPACES (S3-совместимое хранилище)
# ============================================================================

# Ключи доступа к DigitalOcean Spaces
DIGITALOCEAN_SPACES_KEY=your-spaces-access-key
DIGITALOCEAN_SPACES_SECRET=your-spaces-secret-key

# Настройки bucket
DIGITALOCEAN_SPACES_BUCKET=vhm24r-files
DIGITALOCEAN_SPACES_REGION=fra1

# ============================================================================
# TELEGRAM ИНТЕГРАЦИЯ
# ============================================================================

# Токен Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID чата для уведомлений (можно получить у @userinfobot)
TELEGRAM_CHAT_ID=-1001234567890

# ============================================================================
# НАСТРОЙКИ СВЕРКИ (ОПЦИОНАЛЬНО)
# ============================================================================

# Временное окно для сопоставления заказов (минуты)
TIME_WINDOW_MINUTES=3

# Допустимое расхождение в цене (сум)
PRICE_TOLERANCE_SUM=1

# Временное окно для фискальных чеков (минуты)
FISCAL_TIME_WINDOW_MINUTES=5

# Временное окно для платежных шлюзов (минуты)
GATEWAY_TIME_WINDOW_MINUTES=10

# Порог критических ошибок для уведомлений
CRITICAL_ERROR_THRESHOLD=10

# ============================================================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ (ОПЦИОНАЛЬНО)
# ============================================================================

# Sentry DSN для мониторинга ошибок
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# НАСТРОЙКИ ФАЙЛОВ
# ============================================================================

# Максимальный размер загружаемого файла (байты)
MAX_FILE_SIZE=104857600

# Директория для загрузки файлов
UPLOAD_FOLDER=uploads

# Количество дней хранения файлов
FILE_RETENTION_DAYS=30

# ============================================================================
# НАСТРОЙКИ ПЛАНИРОВЩИКА
# ============================================================================

# Включить автоматические задачи (true/false)
SCHEDULER_ENABLED=true

# Часовой пояс для планировщика
TIMEZONE=Asia/Tashkent

# ============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ============================================================================

# Разрешенные расширения файлов (через запятую)
ALLOWED_EXTENSIONS=xlsx,xls,csv

# Максимальное количество файлов за раз
MAX_FILES_PER_UPLOAD=10

# ============================================================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ============================================================================

# Количество worker процессов для Gunicorn
WEB_CONCURRENCY=2

# Таймаут для worker процессов (секунды)
WORKER_TIMEOUT=300

# Максимальное количество запросов на worker
MAX_REQUESTS=1000

# ============================================================================
# НАСТРОЙКИ КЭШИРОВАНИЯ (ОПЦИОНАЛЬНО)
# ============================================================================

# Redis URL для кэширования (если используется)
# REDIS_URL=redis://localhost:6379/0

# Время жизни кэша (секунды)
# CACHE_TTL=3600

# ============================================================================
# НАСТРОЙКИ EMAIL (ОПЦИОНАЛЬНО)
# ============================================================================

# SMTP настройки для email уведомлений
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Email для получения уведомлений
# NOTIFICATION_EMAIL=admin@yourcompany.com

# ============================================================================
# НАСТРОЙКИ API (ОПЦИОНАЛЬНО)
# ============================================================================

# API ключ для внешних интеграций
# API_KEY=your-api-key

# Лимит запросов к API (в минуту)
# API_RATE_LIMIT=100

# ============================================================================
# НАСТРОЙКИ РЕЗЕРВНОГО КОПИРОВАНИЯ
# ============================================================================

# Включить автоматическое резервное копирование
BACKUP_ENABLED=true

# Частота резервного копирования (daily/weekly)
BACKUP_FREQUENCY=daily

# Количество резервных копий для хранения
BACKUP_RETENTION_COUNT=30

# ============================================================================
# НАСТРОЙКИ ОТЛАДКИ (ТОЛЬКО ДЛЯ РАЗРАБОТКИ)
# ============================================================================

# Включить режим отладки (только для разработки!)
# DEBUG=false

# Включить подробное логирование SQL запросов
# SQL_DEBUG=false

# Включить профилирование производительности
# PROFILING_ENABLED=false
